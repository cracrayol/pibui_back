{
    "name": "pibui_backend",
    "version": "1.0.0",
    "description": "Backend part of Pibui",
    "main": "index.js",
    "scripts": {
        "start": "ts-node src/index.ts",
        "build": "tsc",
        "watch": "tsc && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "watch-ts": "tsc -w",
        "watch-node": "nodemon --inspect ./build/index.js",
        "lint": "tslint --project ./tslint.json"
    },
    "author": "cracrayol",
    "license": "ISC",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.18.3",
        "cookie-parser": "^1.4.3",
        "cors": "^2.8.5",
        "express": "^4.16.4",
        "express-jwt": "^5.3.1",
        "express-mysql-session": "^1.3.0",
        "express-session": "^1.15.6",
        "express-validator": "^5.3.0",
        "jsonwebtoken": "^8.3.0",
        "mysql": "^2.16.0",
        "reflect-metadata": "^0.1.12",
        "typeorm": "^0.2.8"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/body-parser": "^1.17.0",
        "@types/cookie-parser": "^1.4.1",
        "@types/cors": "^2.8.4",
        "@types/express": "^4.16.0",
        "@types/express-jwt": "^0.0.40",
        "@types/express-session": "^1.15.11",
        "@types/jsonwebtoken": "^7.2.8",
        "@types/node": "^8.10.37",
        "concurrently": "^3.6.1",
        "nodemon": "^1.18.6",
        "ts-node": "6.0.3",
        "tslint": "^5.11.0",
        "typescript": "^2.9.2"
    }
}
